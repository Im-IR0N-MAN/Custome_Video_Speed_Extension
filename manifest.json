{
  "manifest_version": 3,
  "name": "Global Video Speed Controller",
  "version": "1.1",
  "description": "Control video playback speed from 0.5x to 4x globally.",
  "permissions": ["storage"],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ]
}